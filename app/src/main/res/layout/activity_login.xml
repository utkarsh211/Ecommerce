<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/companyLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sterlin_select" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/companyLogo"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Existing users login below" />
    <ImageView
        android:id="@+id/login_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_icon"
        android:layout_below="@id/text1"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"/>
    <EditText
        android:id="@+id/textInputEmail"
        android:layout_width="274dp"
        android:hint="E-mail"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/login_image"
        android:layout_below="@+id/text1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="85dp"/>
    <ImageView
        android:id="@+id/lock_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_image"
        android:src="@drawable/lock_icon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"/>
    <EditText
        android:id="@+id/password"
        android:layout_below="@+id/text1"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="123dp"
        android:layout_toRightOf="@+id/lock_image"
        android:layout_marginLeft="10dp"
        android:hint="Password"/>
    <TextView
        android:id="@+id/pass_recover"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:text="Forgot Password?"
        android:layout_marginLeft="200dp"/>
    <Button
        android:id="@+id/sign_in_button"
        android:layout_height="40dp"
        android:layout_width="300dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/button_login"
        android:layout_marginTop="30dp"
        android:text="Sign In"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_below="@+id/pass_recover"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not a member yet? Sign Up here"
        android:layout_below="@+id/pass_recover"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="90dp"/>




</RelativeLayout>